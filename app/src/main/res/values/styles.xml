<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Light11">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular11">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold11">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Light13">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular13">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold13">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Light15">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular15">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold15">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Extrabold25">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Extrabold20" parent="Extrabold25">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Extrabold15" parent="Extrabold25">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="home_category_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_category_title" parent="Bold15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>

        <item name="android:textColor">@color/home_title_black</item>
    </style>
    <style name="home_category_look_entire" parent="Regular11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:text">"전체보기 &gt;"</item>


    </style>

    <style name="mypage_tab_navi_name" parent="Bold15">
        <item name="android:textSize">7sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/point_pink</item>
    </style>

    <style name="mypage_tab_menu_title" parent="Regular11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="mypage_tab_menu_num" parent="Bold11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="mypage_tab_menu_zzim_image">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="SmallRatingBar" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="toolbar_left_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:titleMarginBottom">16dp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="toolbar_title" parent="Bold15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="editProfileCategoryName" parent="Regular11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="editProfileCategoryContent" parent="Regular13">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">45dp</item>
    </style>

    <style name="editProfileUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/point_pink</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="editProfileComplete" parent="Bold15">
        <item name="android:background">@drawable/edit_profile_btn_bg</item>
        <item name="android:textColor">@drawable/edit_profile_btn_color</item>
    </style>

    <style name="detailActivityDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_marginTop">30dp</item>

    </style>

    <style name="detailActivityCategoryName" parent="Extrabold15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="tab_text_comm_sear_act" parent="Regular13">
        <item name="android:color">@color/dark_gray</item>
    </style>
    
    <style name="login_btn">
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:textColor">@drawable/login_btn_color</item>
        <item name="android:stateListAnimator">@animator/login_btn_animator</item>
    </style>

</resources>
